@using BusinessEntities
@model T_Users
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>登陆</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootjs")
    @Styles.Render("~/bundles/bootcss")
    <style type="text/css">
        .panel-body {
            padding: 30px 50px 0 50px;
        }

        .form-group {
            margin-bottom: 35px;
        }

        .panel-title {
            font-size: 24px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container web-body" style="margin-top:100px;width: 900px;">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading" style="height: 50px;">
                        <div class="panel-title" style="text-align: left">用户登录</div>
                    </div>
                    <div class="panel-body">
                        @*<form action="@Url.HttpRouteUrl("Login", "Authentication")" class="form-horizontal" role="form" method="post">*@
                        @Html.ValidationMessage("LoginError", new { @class = "alert-danger" })
                        @using (Html.BeginForm("Login", "Authentication", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                           
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Uname, new { @class = "form-control", @placeholder = "用户名", @required = true })
                                @Html.ValidationMessageFor(x => x.Uname,null, new { @class = "alert-danger"})
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(x => x.Upwd, new { @class = "form-control", @placeholder = "密码", @required = true, @autocomplete = "off", @type = "password"})
                                @Html.ValidationMessageFor(x => x.Upwd, null, new { @class = "alert-danger" })
                            </div>
                            <div class="form-group">
                                <input type="submit" class="btn btn-success btn-block" onclick="login();" value="登 陆" />
                                <a href="@Url.Action("Index", "User")" class="btn btn-primary" style="float: right;margin-top: 20px;">注 册</a>
                            </div>
                        }
                        @*</form>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery/validate")
    @Scripts.Render("~/bundles/jquery/validate/unobtrusive")
</body>
</html>
