                {
                   
                    ChangeWB(1, result)
                } else if(Index == -1) {
                    ChangeWB(-1, result)
                } else {
                    return alert("点击失败")
                }

            },
            error: function () {
                alert("点击失败")
            }
        })
    }



    $(function () {
        // 商品+-
        $('.li-quantity a').click(function () {
            var self = $(this);
            var type = self.attr('data-type'),
                num = parseFloat(self.siblings('input').val())
            if (type == 'add') {
                num += 1
            } else if (type == 'subtr') {
                if (num > 1) {
                    num -= 1
                } else {
                    return false
                }
            }
            self.siblings('input').val(num)
            tamount()
        });
    });
    var sum = 0
    //计算商品总价格
    function tamount() {
        price = $("#price").val()
        num = $("#num").val()
        sum = (parseFloat(price) * parseFloat(num))
        $("#money").html('￥' + sum + '.00')
    }
    tamount()

    //加入购物车
    function AddCart()
    {
        var Num = $("#num").val()
        var GoodsID = $("#GoodsID").val()
        var data = { "Num": Num, "GoodsID": GoodsID }
        $.ajax({
            url: "/User/AddCart",
            type: "POST",
            data: data,
            success: function (data) {
                alert(data)
            },
            error: function () {
                alert("加入购物车失败")
            }
        })

    }
 </script>
