    //异步提交点赞踩
    function WellBad(index)
    {
        var GoodsID = $("#GoodsID").val()
        var datas = { "GoodsID": GoodsID, "Index": index }
        $.ajax({
            url: "/User/WellBad",
            type: "POST",
            data: datas,
