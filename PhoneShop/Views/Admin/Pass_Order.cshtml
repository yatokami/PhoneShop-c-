@using ViewModels
@model AdminListView
@{ 

}

@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";

}

@section ContentBody{
   <aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left image">
                <img src="~/Public/dist/img/user2-160x160.jpg" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
                <p>@Model.AdminUser</p>
                <!-- Status -->
                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
        </div>

        <!-- search form (Optional) -->
        <form action="#" method="get" class="sidebar-form">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Search...">
                <span class="input-group-btn">
                    <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                </span>
            </div>
        </form>
        <!-- /.search form -->
        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">HEADER</li>
            <!-- Optionally, you can add icons to the links -->
            <li class="treeview">
                <a href="#"><i class="fa fa-link "></i> <span>用户管理</span><i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li><a href="Index"><i class="fa fa-circle-o"></i>用户信息查看</a></li>
                    <li><a href="User_Password"><i class="fa fa-circle-o"></i>用户密码修改</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#"><i class="fa fa-link"></i> <span>商品管理</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li><a href="Add_Goods"><i class="fa fa-circle-o"></i>新商品入库</a></li>
                    <li><a href="Update_Goods"><i class="fa fa-circle-o"></i>修改商品信息</a></li>
                    <li><a href="Index_Goods"><i class="fa fa-circle-o"></i>查询商品信息</a></li>
                    <li><a href="Delete_Goods"><i class="fa fa-circle-o"></i>删除旧商品</a></li>
                </ul>
            </li>
            <li class="active treeview">
                <a href="#"><i class="fa fa-link"></i> <span>订单管理</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li class="active"><a href="Pass_Order"><i class="fa fa-circle-o"></i>已审核订单</a></li>
                    <li><a href="Unpass_Order"><i class="fa fa-circle-o"></i>未审核订单</a></li>
                    <li><a href="Index_Order"><i class="fa fa-circle-o"></i>查询用户订单详情</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#"><i class="fa fa-link"></i> <span>评论管理</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li><a href="Index_Comment"><i class="fa fa-circle-o"></i>删除评论</a></li>
                </ul>
            </li>
            <li class="treeview">
                <a href="#"><i class="fa fa-link"></i> <span>商城公告</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li><a href="Add_Bulletin"><i class="fa fa-circle-o"></i>发布新公告</a></li>
                </ul>
            </li>
        </ul><!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <h1>
                订单管理
                <small>已审核订单</small>
            </h1>
            <ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i>管理界面</a></li>
                <li class="active">订单管理</li>
                <li class="active">已审核订单</li>
            </ol>
        </section>

        <!-- Main content -->
        <section class="content">

            <div class="row">
                <div class="col-xs-12">
                    <div class="box">
                        <div class="box-header">
                            <h3 class="box-title">已审核订单列表</h3>
                        </div><!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <form action="@Url.Action("Pass_Order", "Admin")" method="get">
                                    <div class="col-sm-6">
                                        <div id="example1_filter" class="dataTables_filter">
                                            <label>根据用户查询:<input id="searchtxt" name="Uname" type="search" class="form-control input-sm" placeholder="" aria-controls="example1"></label><button id="search" type="submit" class="btn btn-block btn-info" style="width:70px;">查询</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>用户名</th>
                                        <th>购买总数</th>
                                        <th>订单总价</th>
                                        <th>付款状态</th>
                                        <th>付款方式</th>
                                        <th>真实姓名</th>
                                        <th>联系电话</th>
                                        <th>地址</th>
                                        <th>取消订单</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var Data in Model.AdminOrderViews.GetPagingData())
                                    {
                                        <tr role="row" class="odd">
                                            <td>@Data.Uname</td>
                                            <td>@Data.Num</td>
                                            <td>@Data.TotalMoney</td>
                                            <td>@Data.IsPayed</td>
                                            <td>@Data.PayType</td>
                                            <td>@Data.ReceiverName</td>
                                            <td>@Data.ReceiverTel</td>
                                            <td>@Data.Address</td>
                                            <td><button name="@Data.OrderID" type="submit" class="btn btn-block btn-primary" onclick="Cancel_Order(this)">取消订单</button></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="row">
                                <div class="col-sm-5">
                                    <div class="dataTables_info" id="example2_info" role="status" aria-live="polite">
                                        总共有 @Model.AdminOrderViews.DataSource.Count() 条数据
                                    </div>
                                </div>
                                <div class="col-sm-7">
                                    <div class="dataTables_paginate paging_simple_numbers" id="example2_paginate">
                                    </div>
                                    <ul class="pagination">

                                        @if (Model.AdminOrderViews.HasPrev)
                                        {
                                            <li class="paginate_button previous"><a href="@Url.Action("Pass_Order", "Admin", new { Uname = (string)Model.Uname, pageIndex = 1 })"><<</a></li>
                                            <li class="paginate_button previous"><a href="@Url.Action("Pass_Order", "Admin", new {Uname = (string)Model.Uname, pageIndex = Model.AdminOrderViews.PageIndex - 1 })"><</a></li>

                                        }
                                        else
                                        {
                                            <li class="paginate_button previous disabled"><a><<</a></li>
                                            <li class="paginate_button previous disabled"><a><</a></li>
                                        }
                                        @for (int i = Model.AdminOrderViews.PageIndex; i <= Model.AdminOrderViews.PageCount + 2; i++)
                                        {
                                            if (i >= 3 && i <= Model.AdminOrderViews.PageCount + 2 && i < Model.AdminOrderViews.PageIndex + 6)
                                            {
                                                if (i == Model.AdminOrderViews.PageIndex + 2)
                                                {
                                                    <li class="paginate_button previous active"><a href="@Url.Action("Pass_Order", "Admin", new {Uname = (string)Model.Uname, pageIndex = (i - 2) })">@(i - 2)</a></li>
                                                }
                                                else
                                                {
                                                    <li class="paginate_button previous"><a href="@Url.Action("Pass_Order", "Admin", new {Uname = (string)Model.Uname, pageIndex = (i - 2) })">@(i - 2)</a></li>
                                                }
                                            }
                                            else if (i == Model.AdminOrderViews.PageIndex + 6)
                                            {
                                                <li class="paginate_button previous disabled"><a>...</a></li>
                                            }

                                        }
                                        @if (Model.AdminOrderViews.HasNext)
                                        {

                                            <li class="paginate_button previous"><a href="@Url.Action("Pass_Order", "Admin", new {Uname = (string)Model.Uname, pageIndex = Model.AdminOrderViews.PageIndex + 1 })">></a></li>
                                            <li class="paginate_button previous"><a href="@Url.Action("Pass_Order", "Admin", new {Uname = (string)Model.Uname, pageIndex = Model.AdminOrderViews.PageCount })">>></a></li>
                                        }
                                        else
                                        {
                                            <li class="paginate_button previous disabled"><a>></a></li>
                                            <li class="paginate_button previous disabled"><a>>></a></li>
                                        }
                                    </ul>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </section><!-- /.content -->
    </div><!-- /.content-wrapper -->
}

@section ContentScript{
    <script src="~/Public/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Public/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <!-- SlimScroll -->
    <script src="~/Public/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/Public/plugins/fastclick/fastclick.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/Public/dist/js/demo.js"></script>

    <script>
    $(function () {
        $("#example1").DataTable();
        $('#example2').DataTable({
            "paging": false,
            "lengthChange": false,
            "searching": false,
            "ordering": false,
            "info": false,
            "autoWidth": false
        });
    });
    function Cancel_Order(obj) {
        var OrderID = obj.name;
        var data = { "OrderID": OrderID }

        if (OrderID != "") {
            $.ajax({
                url: "/Admin/Cancel_Order",
                type: "POST",
                data: data,
                success: function (data) {
                    data = JSON.stringify(data)
                    if (data == "true") {
                        alert("取消成功")
                        location.reload();
                    } else {
                        alert("取消失败")
                    }
                },
                error: function () {

                }
            })
        } else {
            alert("删除失败");
        }
    }
    </script>
}