@using ViewModels
@model UserListView

@{
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

@section ContentScript{

}

@section ContentClass{

}
@section ContentBody{
    
  
    <div class="row" >
        <div class="col-xs-3" id="myScrollspy">
            <ul class="nav nav-tabs nav-stacked" data-spy="affix" data-offset-top="10">
                <li class="active"><a href="">用户个人信息修改</a></li>
                <li><a href="/User/OrderShow">订单记录</a></li>
            </ul>
        </div>
        <div class="col-xs-9">
            <form role="form" action="/User/Update?Uname=@Model.UserName">
                <div class="form-group">
                    <p>尊敬的 @Model.UserName</p>
                </div>
                <div class="form-group">
                    <label for="name">真实姓名</label><input type="text" name="RealName" class="form-control" value="@Model.Users[0].RealName" />
                </div>
                <div class="form-group">
                    <label for="name">性别</label>
                    <div class="radio">
                        <label>
                            <input type="radio" name="Sex" id="optionsRadios1"
                                   value="男">  男
                        </label>
                        <label>
                            <input type="radio" name="Sex" id="optionsRadios2"
                                   value="女">
                            女
                        </label>
                        <label>
                            <input type="radio" name="Sex" id="optionsRadios3"
                                   value="秀吉">
                            秀吉
                        </label>
                    </div>
                    <div class="form-group">
                        <label for="name">电话</label>
                        <input type="text" name="Tel" class="form-control" value="@Model.Users[0].Tel" />
                    </div>
                    <div class="form-group">
                        <label for="name">Email</label>
                        <input type="text" name="Email" class="form-control" value="@Model.Users[0].Email" />
                    </div>
                    <div class="form-group">
                        <label for="name">Address</label>
                        <input type="text" name="Address" class="form-control" value="@Model.Users[0].Address" />
                    </div>
                    <div class="form-group">
                        <label for="name">PostCode</label>
                        <input type="text" name="PostCode" class="form-control" value="@Model.Users[0].PostCode" />
                    </div>
                    <button type="submit" class="btn btn-default">提交</button>
                </div>
            </form>
</div>
</div>
@if (Model.Users[0].Sex == "男")
{
    <script>$("input[name='Sex']").get(0).checked = true;    </script>
}
else if (Model.Users[0].Sex == "女")
{
    <script>$("input[name='Sex']").get(1).checked = true;    </script>
}
else
{
    <script>$("input[name='Sex']").get(2).checked = true;    </script>
}
}
